        "webpack": "^4.16.5",
        "webpack-cli": "^3.1.0",
        "webpack-dev-server": "^3.1.3"
    },
    "eslintConfig": {
        "parserOptions": {
            "ecmaVersion": 6,
            "sourceType": "module",
            "ecmaFeatures": {
                "jsx": true,
                "experimentalObjectRestSpread": true
            }
        },
        "parser": "babel-eslint",
        "rules": {
            "semi": [
                "warn",
                "always"
            ],
            "quotes": [
                "warn",
                "single"
            ],
            "jsx-quotes": [
                "warn",
                "prefer-single"
            ]
        }
    },
    "stylelint": {
        "rules": {
            "unit-no-unknown": true,
            "selector-type-no-unknown": true,
            "no-invalid-double-slash-comments": true,
            "no-duplicate-selectors": true,
            "no-descending-specificity": true,
            "unit-case": "lower"
        }
    }
}